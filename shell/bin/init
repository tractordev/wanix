#!/bin/busybox sh
/bin/busybox --install -s /bin

mount -t proc none /proc
ln -s /web/opfs /opfs

if [ -f /web/opfs/etc/profile ]; then
    . /web/opfs/etc/profile
fi

cd /web/opfs

# start shell on ttyS0 with job control
setsid /bin/busybox sh -c "PS1='\w âžœ ' LD_PRELOAD=/lib/preload.so exec /bin/busybox sh </dev/ttyS0 >/dev/ttyS0 2>&1"
